<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNote"
    android:padding="20dp"
    android:background="@color/colorBlack">

    <EditText
        android:id="@+id/add_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorWhite"
        android:hint="@string/add_note_title"
        android:textColorHint="@color/colorWhite"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="50dp"
        android:includeFontPadding="false"
        android:paddingBottom="20dp"
        android:inputType="textCapSentences"
        android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/add_note_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorWhite"
        android:hint="@string/add_note_description"
        android:textColorHint="@color/colorWhite"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="50dp"
        android:paddingBottom="20dp"
        android:inputType="textMultiLine|textCapSentences"
        android:includeFontPadding="false"
        android:singleLine="false"
        android:imeOptions="actionDone"/>

    <Button
        android:id="@+id/add_note_here_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/add_note_btn"
        android:text="@string/add_note_here"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:padding="20dp"/>


</LinearLayout>